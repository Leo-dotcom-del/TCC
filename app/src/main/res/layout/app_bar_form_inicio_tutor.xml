<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FormInicioTutor">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.AppTCC.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/background"
            />

        <androidx.appcompat.widget.SearchView
            android:id="@+id/searchViewPets"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:queryHint="Pesquisar pets" />


    </com.google.android.material.appbar.AppBarLayout>

    <include layout="@layout/content_form_inicio_tutor" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/ic_adc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="@dimen/fab_margin"
        android:layout_marginBottom="16dp"
        android:contentDescription="Cadastre seu pet!"
        app:srcCompat="@android:drawable/ic_menu_add"
        tools:ignore="HardcodedText" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>